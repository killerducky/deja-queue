{
    "manifest_version": 3,
    "name": "YouTube DJ",
    "version": "1.0",
    "description": "Custom queue control for YouTube videos.",
    "permissions": ["storage", "scripting"],
    "content_scripts": [
        {
            "matches": ["*://www.youtube.com/*"],
            "js": ["content.js"]
        }
    ],
    "action": {
        "default_popup": "options.html"
    },
    "background": {
        "scripts": ["background.js"],
        "type": "module"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "icons": {
        "16": "favicon.ico",
        "48": "favicon.ico",
        "128": "favicon.ico"
    }
}
